<% 
  #is_replyの変数を設定
  is_reply = false if is_reply.nil?
%>

<div class="per <%= 'mine' if mypost?(t) %> <%= 'reply' if is_reply %>">
  <p class="icon">
    <% if t.user.thumbnail? %>
      <%= image_tag t.user.thumbnail.url %>
    <% else %>
      NO IMAGE
    <% end %>
  </p>
  <%= simple_format t.message, class: 'message' %>
  <% if mypost?(t) %>
    <div class="operation">
      <%= link_to root_path(id: t.id, message: t.message) do %>
        <%= button_tag t('userdef.edit'), class: 'btn btn-info float-right' %>
      <% end %>
      <%= button_to t('userdef.del'), timeline_path(t), method: :delete, class: 'btn btn-danger', data: {confirm: '削除しますか？'} %>
    </div>
  <% else %>
    <%= link_to root_path(reply_id: t.id) do %>
      <%= button_tag t('userdef.Re'), class: 'btn btn-info' %>
    <% end %>
  <% end %>
  <hr>
  <span class: "like_count">
    <%= t('userdef.like') %>：
    <span class: "js-like_count">
      <% if @like_counts[t.id].nil? %>
        0
      <% else %>
        <%= @like_counts[t.id] %>
      <% end %>
    </span>
  </span>
  <% if not mypost?(t) %>
    <% if not already_like?(t) %>
      <%= form_for @like, url:likes_path, remote: true, html: {class: 'like_form'}, authenticity_token: true do |f| %>
        <%= f.hidden_field :timeline_id, value: t.id %>
        <%= f.submit t('userdef.like'), class: 'btn btn-success js-like' %>
      <% end %>
    <% end %>
  <% end %>
</div>
<% t.replies.each do |r| %>
  <%= render 'timelines/timeline', t: r, is_reply: true %>
<% end %>
